{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "main/**/*",
    "renderer/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app"
  ]
}
